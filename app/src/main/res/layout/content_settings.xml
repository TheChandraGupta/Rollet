<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gupta.pocketfull.Settings"
    tools:showIn="@layout/app_bar_settings"
    android:background="#e9fdc0"
    android:padding="20dp">

    <!-- Push Test 5-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="60dp"
        android:id="@+id/changepocketname"
        android:layout_marginTop="50dp"
        android:hint="Wana Change Pocket Name"
        android:textColorHint="#16a085"
        android:textColor="#16a085"
        android:background="#e9fdc0"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="OK"
        android:id="@+id/changepocket"
        android:background="#16a085"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/changepocketname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="RESET POCKET"
        android:id="@+id/resetpocket"
        android:layout_below="@+id/changepocketname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#16a085"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="DELETE POCKET"
        android:id="@+id/deletepocket"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/resetpocket"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#16a085" />
</RelativeLayout>
